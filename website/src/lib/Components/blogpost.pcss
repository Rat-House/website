.markdown {
  h1 {
    @apply text-4xl text-red-500;
  }

  h2 {
    @apply text-2xl;
  }

  .anchor {
    @apply before:content-['â†—'] -ml-[26px] pr-1 hover:underline text-accent text-3xl float-left align-middle leading-none;
  }

  *:is(h1, h2, h3, h4, h5, h6) {
    > .anchor {
      visibility: hidden;
    }
    &:hover > .anchor {
      visibility: visible;
    }
  }
}
